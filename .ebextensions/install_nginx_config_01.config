#
#   STEP 1 - Create the nginx config file
#
files:

  "/opt/elasticbeanstalk/hooks/appdeploy/enact/02flip.sh" :
    mode: "000755"
    owner: root
    group: root
    content: |
      # set up nginx
      cat > /etc/nginx/conf.d/elasticbeanstalk-nginx-docker-upstream.conf <<EOF
      upstream docker {
        server $EB_CONFIG_NGINX_UPSTREAM_IP:$EB_CONFIG_NGINX_UPSTREAM_PORT;
        keepalive 256;
      }

      server {
          listen 80;


          if (\$time_iso8601 ~ "^(\d{4})-(\d{2})-(\d{2})T(\d{2})") {
              set \$year \$1;
              set \$month \$2;
              set \$day \$3;
              set \$hour \$4;
          }
          access_log /var/log/nginx/healthd/application.log.\$year-\$month-\$day-\$hour       healthd;
          # access_log  /var/log/nginx/access.log  main;


          location / {
              proxy_pass  http://docker;
              proxy_set_header   Connection "";
              proxy_http_version 1.1;
              proxy_set_header        Host            \$host;
              proxy_set_header        X-Real-IP       \$remote_addr;
              proxy_set_header        X-Forwarded-For \$proxy_add_x_forwarded_for;

              if (\$http_x_forwarded_proto != "https") {
                rewrite ^(.*)$ https://\$host\$1 permanent;
              }

              # Add HTTP Strict Transport Security for good measure.
              add_header Strict-Transport-Security "max-age=31536000; includeSubDomains;";
          }

          gzip on;
          gzip_comp_level 4;
          gzip_types text/html text/plain text/css application/json application/    x-javascript application/xml application/xml+rss text/javascript;
      }
      EOF
      service nginx restart || error_exit "Failed to start nginx, abort deployment" 1
